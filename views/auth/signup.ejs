<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (errorMessage) { %>
        <div class="user-message user-message--error"> <%= errorMessage %> </div>
    <% } %>
      <form class="form" action="/signup" method="POST" novalidate>
        <div class="form-control">
            <label for="email">E-Mail</label>
            <input 
            class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
            placeholder="your@email.com"
            type="email" 
            name="email" 
            id="email" 
            value="<%= oldInput.email %>">
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input 
            class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
            placeholder="create password"
            type="password" 
            name="password" 
            id="password" 
            value="<%= oldInput.password %>">
        </div>
        <div class="form-control">
            <label for="confirmPassword">Confirm Password</label>
            <input 
            class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
            placeholder="re-enter password"
            type="password" 
            name="confirmPassword" 
            id="confirmPassword" 
            value="<%= oldInput.confirmPassword %>">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button class="btn" type="submit">Sign Up</button>
    </form>
  </main>
<%- include('../includes/footer.ejs') %>
</body>